    <div id="login-view" class="container">

        <div class="row">
        
          <div class="col-md-3 col-xs-1 col-sm-1"></div>
          
          <div class="col-md-6 col-xs-10 col-sm-10 login">
  
            <form class="spika-form">
            
                <h2 class="form-signin-heading">{{l10n "Login to Avatalk"}}</h2>

                <p>{{l10n "Login Description"}}</p>

                <div class="type_chk">
                    <input type="radio" id="rdo-gubun1" name="gubun" value="t" checked> <label for="rdo-gubun1">{{l10n "Phone number"}}</label>
                    <input type="radio" id="rdo-gubun2" name="gubun" value="e"> <label for="rdo-gubun2">{{l10n "e-mail"}}</label>
                </div>
                
                <div class="form-group input_area phone" id="divTel1" >
                    <div class="form-label">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{l10n "Phone number"}}
                    </div>
                    <!-- 해외인증번호 발송용 국가코드 -->
                    <select class="country" id="country_code">
                        <!--<option value="China">China +86</option>
                        <option value="HongKong">HongKong +852</option>-->
                    </select>
                    <input type="text" id="input-phone" class="form-control phonenum">
                    <div class="label-error"></div>
                </div>


                <div class="form-group" id="divEmail1">
                    <div class="form-label">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{l10n "e-mail"}}
                    </div>
                    <input type="text" id="input-email" class="form-control">
                    <div class="label-error"></div>
                </div>
                
                <div class="form-group" id="divEmail2">
                    <div class="form-label">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>  {{l10n "password"}}
                    </div>
                    <input type="password" id="input-pass" class="form-control">
                    <div class="label-error"></div>
                </div>

                <div id="divEmail3" class="path">
                    {{l10n "Forgot your email?"}} <a href="#findemail">{{l10n "Find email"}}</a>
                </div>

                <div id="divPasswd" class="path">
                    {{l10n "Forgot your password?"}} <a href="#findpasswd">{{l10n "Reset password"}}</a>
                </div>

                <!--<div class="spacer">
    
                </div>-->
                
                <div class="btn btn-lg btn-primary btn-block" id="btn-enter1">{{l10n "Request verification number"}}</div>
                <div class="btn btn-lg btn-primary btn-block" id="btn-enter2">{{l10n "Sign in"}}</div>

            </form>

              <p class="info_t">{{l10n "Sign up now"}}</p>
              <a href="https://play.google.com/store/apps/details?id=kr.cnktech.messenger&hl=ko" target="_blank"><img src="img/google.png" alt="아바톡" /></a>
              <a href="https://itunes.apple.com/kr/app/id1186321238" target="_blank"><img src="img/ios.png" alt="아바톡" /></a>

          </div>
          
          <div class="col-md-3 col-xs-1 col-sm-1"></div>
          
        </div>

    
    </div>
    

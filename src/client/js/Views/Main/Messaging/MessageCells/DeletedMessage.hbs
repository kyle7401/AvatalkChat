<div class="message-cell {{isMine}} text" id="{{id}}" userid="{{userID}}">
    
    <div class="status status{{status}}">
        
        <span class="sending glyphicon glyphicon-arrow-right"></span>
        <span class="sent glyphicon glyphicon-ok-circle  "></span>
        
    </div>
        
	<div class="avatar">
		<img src="{{ avatarURL }}" />
    </div>
    
    <div class="info">
        
        <span class="name"> {{name}} </span>
        <span class="time"> {{formatTime created}} </span>        
        
    </div>
    
    <div class="message">
        <!--<div>[ This message is deleted ]</div>-->
        <div>{{l10n "This message is deleted at "}} {{{formatDate deleted}}}</div>
    </div>
    
    <div class="clearfix"></div>
    
</div>


